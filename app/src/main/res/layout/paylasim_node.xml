<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="176dp"
        android:layout_height="191dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="2dp">

        <RelativeLayout
            android:id="@+id/RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/paylasimFoto"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentEnd="true"
                app:srcCompat="@android:drawable/ic_menu_camera" />

            <TextView
                android:id="@+id/yemekAdi"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="120dp"
                android:text="Yemek Ad覺"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/kullaniciImage"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="145dp"
                app:srcCompat="@drawable/chef_logo" />

            <TextView
                android:id="@+id/kullaniciAdi"
                android:layout_width="match_parent"
                android:layout_height="18sp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/kullaniciImage"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/kullaniciImage"
                android:text="Kullan覺c覺 Ad覺"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pismeSuresi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/kullaniciAdi"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/imageView4"
                android:text="3 dk"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/kullaniciAdi"
                android:layout_below="@+id/kullaniciAdi"
                app:srcCompat="@drawable/saat" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>